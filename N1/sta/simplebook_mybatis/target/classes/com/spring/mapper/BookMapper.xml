<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.BookMapper">



	<insert id="insertBook">
		insert into bookTBL(code,title,writer,price)
		values(#{code},#{title},#{writer},#{price})
	</insert>
	
	<update id="updateBook">
		update bookTBL
		set price=#{price} where code=#{code}
	</update>
	
	<delete id="deleteBook">
		delete from bookTBL where code=#{code}
	</delete>
	
	<select id="getBookList" resultType="com.spring.domain.BookVO">
		select *from bookTBL order by code desc
	</select>
	
	<select id="getBook" parameterType="String" resultType="com.spring.domain.BookVO">
		select * from bookTBL where code=#{code}
	</select>
	
	<select id="getBookSearchList" 
	resultType="com.spring.domain.BookVO">
		select *
		from bookTBL
		where
		<if test="criteria=='code'.toString()">
			code=#{keyword}
		</if>
		<if test="criteria=='title'.toString()">
			title like '%'||#{keyword}||'%'
		</if>
	</select>

</mapper>