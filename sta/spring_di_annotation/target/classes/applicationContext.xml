<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
	<!-- context는 @Autowired 활성화  시켜준다-->
	<context:annotation-config/>
	
	
	<bean id="apple" class="com.spring.annotation.autowired.AppleSpeaker"></bean>
	<bean id="STv" class="com.spring.annotation.autowired.SamsungTV"></bean>
	<bean id="britz" class="com.spring.annotation.autowired.BritzSpeaker"></bean>

</beans>
